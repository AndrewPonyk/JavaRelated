# Environment Configuration
NODE_ENV=development
PORT=3001

# Application Settings
APP_NAME="Enterprise Dashboard Platform"
APP_VERSION="1.0.0"
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dashboard_platform_dev"
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_TTL=3600

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRY="24h"
JWT_REFRESH_EXPIRY="7d"
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET="your-session-secret-key"
SESSION_TIMEOUT=86400

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
EMAIL_FROM="noreply@yourdomain.com"

# File Upload & Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,text/csv,application/json"

# Azure Configuration (Production)
AZURE_STORAGE_ACCOUNT=""
AZURE_STORAGE_KEY=""
AZURE_STORAGE_CONTAINER="dashboard-files"

# External API Keys
OPENAI_API_KEY=""
GOOGLE_ANALYTICS_KEY=""
HUBSPOT_API_KEY=""
SALESFORCE_CLIENT_ID=""
SALESFORCE_CLIENT_SECRET=""

# Machine Learning Services
ML_SERVICE_URL="http://localhost:8080"
TENSORFLOW_BACKEND="cpu"
ML_MODEL_PATH="./models"

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_PATH="./logs"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# Application Insights (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="Content-Type,Authorization"

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_MAX_CONNECTIONS_PER_IP=10
WS_MAX_CONNECTIONS_PER_USER=5
WS_MAX_MESSAGES_PER_MINUTE=60
WS_MAX_MESSAGES_PER_HOUR=1000
WS_CONNECTION_ATTEMPTS_PER_MINUTE=5
WS_BAN_DURATION=300

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ML_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DRAG_DROP_BUILDER=true
ENABLE_EXPORT_FEATURES=true

# Development Tools
ENABLE_DEV_TOOLS=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
DATABASE_QUERY_TIMEOUT=10000
API_RESPONSE_TIMEOUT=30000

# Security Settings
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_CSRF=true
TRUST_PROXY=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# Testing Configuration
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/dashboard_platform_test"
TEST_REDIS_URL="redis://localhost:6379/1"

# Prisma Configuration
PRISMA_CLI_QUERY_ENGINE_TYPE="binary"
PRISMA_GENERATE_DATAPROXY=false
# Frontend internal port (3000 for dev, 80 for prod)
FRONTEND_INTERNAL_PORT=3000
