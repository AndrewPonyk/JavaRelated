{
  "name": "su-comments",
  "displayName": "SU Comments",
  "description": "View and navigate SU comments in your codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "suComments.explorer",
          "name": "SU Comments",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "commands": [
      {
        "command": "suComments.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "suComments.collapseAll",
        "title": "Collapse All",
        "icon": "$(chevron-up)"
      },
      {
        "command": "suComments.expandAll",
        "title": "Expand All",
        "icon": "$(chevron-down)"
      },
      {
        "command": "suComments.setStatusClear",
        "title": "Set as Clear",
        "icon": "$(pass)"
      },
      {
        "command": "suComments.setStatusNotClear",
        "title": "Set as Not Clear",
        "icon": "$(question)"
      },
      {
        "command": "suComments.setStatusComplex",
        "title": "Set as Complex",
        "icon": "$(warning)"
      },
      {
        "command": "suComments.setStatusHack",
        "title": "Set as Hack",
        "icon": "$(zap)"
      },
      {
        "command": "suComments.setStatusBadCode",
        "title": "Set as Bad Code",
        "icon": "$(stop)"
      },
      {
        "command": "suComments.setStatusUntouched",
        "title": "Set as Untouched",
        "icon": "$(circle-outline)"
      },
      {
        "command": "suComments.copyAllAsMarkdown",
        "title": "Copy All as Markdown",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "suComments.refresh",
          "when": "view == suComments.explorer",
          "group": "navigation"
        },
        {
          "command": "suComments.collapseAll",
          "when": "view == suComments.explorer",
          "group": "navigation"
        },
        {
          "command": "suComments.expandAll",
          "when": "view == suComments.explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "suComments.setStatusClear",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "1_modification"
        },
        {
          "command": "suComments.setStatusNotClear",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "1_modification"
        },
        {
          "command": "suComments.setStatusComplex",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "1_modification"
        },
        {
          "command": "suComments.setStatusHack",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "1_modification"
        },
        {
          "command": "suComments.setStatusBadCode",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "1_modification"
        },
        {
          "command": "suComments.setStatusUntouched",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "1_modification"
        },
        {
          "command": "suComments.copyAllAsMarkdown",
          "when": "view == suComments.explorer && viewItem == suComment",
          "group": "2_copy"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.5"
  }
}
