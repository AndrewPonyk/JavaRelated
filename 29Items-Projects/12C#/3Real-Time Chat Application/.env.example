# TeamChat Environment Configuration
# Copy this file to .env and update values for your environment
# Use double underscore (__) for nested configuration values

# ============================================
# APPLICATION SETTINGS
# ============================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# Generate a secure random string of at least 32 characters
# Example: openssl rand -base64 32
Jwt__Secret=REPLACE_WITH_SECURE_SECRET_KEY_AT_LEAST_32_CHARS
Jwt__Issuer=TeamChat
Jwt__Audience=TeamChat
Jwt__ExpiryMinutes=60

# ============================================
# DATABASE (REQUIRED)
# ============================================
MongoDB__ConnectionString=mongodb://mongodb:27017
MongoDB__DatabaseName=TeamChat

# ============================================
# REDIS CACHE (REQUIRED)
# ============================================
Redis__ConnectionString=redis:6379
Redis__InstanceName=TeamChat_
Redis__PresenceTtlSeconds=300
Redis__TypingTtlSeconds=5

# ============================================
# CORS (adjust for your deployment)
# ============================================
# Use array index notation for multiple origins
Cors__AllowedOrigins__0=http://localhost:5173
Cors__AllowedOrigins__1=https://yourdomain.com

# ============================================
# FILE STORAGE
# ============================================
FileStorage__Provider=Local
FileStorage__LocalPath=./uploads
FileStorage__BaseUrl=/files
FileStorage__MaxFileSizeMB=10

# ============================================
# AZURE SERVICES (Optional - for production)
# ============================================
# Azure SignalR Service (for scaling WebSockets)
# AZURE_SIGNALR_CONNECTION_STRING=

# Azure Blob Storage (for file uploads)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_CONTAINER_NAME=uploads

# ============================================
# LOGGING
# ============================================
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
