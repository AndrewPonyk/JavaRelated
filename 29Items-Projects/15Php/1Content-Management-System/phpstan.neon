includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/
        - bootstrap/
        - config/
        - database/
        - routes/
        - tests/

    # Level 9 is the highest level
    level: 5

    excludePaths:
        - vendor/
        - storage/
        - bootstrap/cache/

    ignoreErrors:
        - '#Unsafe usage of new static#'

    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
