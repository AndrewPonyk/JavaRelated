# Healthcare Claims Processing - Environment Variables Template
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION
# =============================================================================
QUARKUS_PROFILE=dev
QUARKUS_HTTP_PORT=8080
QUARKUS_LOG_LEVEL=INFO

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claims
DB_USERNAME=claims_user
DB_PASSWORD=your_secure_password_here

# =============================================================================
# MESSAGE BROKER - Kafka / Azure Event Hubs
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# For Azure Event Hubs (Kafka protocol):
# KAFKA_BOOTSTRAP_SERVERS=your-namespace.servicebus.windows.net:9093
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username="$ConnectionString" password="your-connection-string";

# =============================================================================
# SEARCH - Elasticsearch
# =============================================================================
ES_HOSTS=http://localhost:9200
ES_INDEX_PREFIX=claims
# For secured Elasticsearch:
# ES_USERNAME=elastic
# ES_PASSWORD=your_password

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_HOST=redis://localhost:6379
# For Azure Cache for Redis:
# REDIS_HOST=rediss://your-cache.redis.cache.windows.net:6380
# REDIS_PASSWORD=your_access_key

# =============================================================================
# FRAUD DETECTION API
# =============================================================================
FRAUD_API_URL=http://localhost:8090
FRAUD_API_KEY=your_api_key_here
FRAUD_API_TIMEOUT=5000

# =============================================================================
# SECURITY - Azure AD / OIDC
# =============================================================================
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
OIDC_AUTH_URL=https://login.microsoftonline.com/${AZURE_TENANT_ID}/v2.0
OIDC_ISSUER=https://login.microsoftonline.com/${AZURE_TENANT_ID}/v2.0

# JWT Configuration
JWT_PUBLIC_KEY_LOCATION=https://login.microsoftonline.com/${AZURE_TENANT_ID}/discovery/v2.0/keys
JWT_ISSUER=https://login.microsoftonline.com/${AZURE_TENANT_ID}/v2.0

# =============================================================================
# AZURE KEY VAULT (for production secrets)
# =============================================================================
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/

# =============================================================================
# OBSERVABILITY
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=claims-service

# Application Insights (Azure)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;...

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ML_FRAUD_DETECTION=true
FEATURE_ASYNC_ADJUDICATION=true
FEATURE_REAL_TIME_NOTIFICATIONS=false

# =============================================================================
# AZURE DEPLOYMENT (for Azure Functions)
# =============================================================================
AZURE_FUNCTION_APP_NAME=claims-processing
AZURE_APP_SERVICE_PLAN=claims-plan
AZURE_RESOURCE_GROUP=claims-rg
AZURE_REGION=eastus
