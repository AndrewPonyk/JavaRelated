# ===========================================
# Enterprise Banking Platform
# Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control

# ===========================================
# Application Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
# For Docker Compose
POSTGRES_DB=banking
POSTGRES_USER=banking_user
POSTGRES_PASSWORD=your_secure_password_here

# For application services
DB_HOST=localhost
DB_PORT=5432
DB_NAME=banking
DB_USERNAME=banking_user
DB_PASSWORD=your_secure_password_here

# Connection Pool
DB_POOL_SIZE=10
DB_POOL_MAX_SIZE=50

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Kafka Configuration
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=banking-consumer

# ===========================================
# Security / OAuth2 / Keycloak
# ===========================================
# Keycloak admin credentials (for docker-compose)
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password_here

# JWT/OAuth2 settings
JWT_SECRET=your-256-bit-secret-key-minimum-32-chars
JWT_EXPIRATION=3600
OAUTH2_ISSUER_URI=http://localhost:8180/realms/banking
OAUTH2_CLIENT_ID=banking-client
OAUTH2_CLIENT_SECRET=your_client_secret_here

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Service Discovery (Eureka)
# ===========================================
EUREKA_URL=http://localhost:8761/eureka/
CONFIG_SERVER_URL=http://localhost:8888

# ===========================================
# AWS Configuration (Production)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=banking-documents
AWS_KMS_KEY_ID=

# ECR Registry
ECR_REGISTRY=your-account.dkr.ecr.us-east-1.amazonaws.com

# ===========================================
# Monitoring
# ===========================================
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here
PROMETHEUS_URL=http://localhost:9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ===========================================
# SonarQube
# ===========================================
SONAR_HOST_URL=http://localhost:9000
SONAR_TOKEN=your_sonar_token_here

# ===========================================
# Fraud Detection
# ===========================================
FRAUD_MODEL_PATH=models/fraud_model.cbm
FRAUD_RISK_THRESHOLD=0.7

# ===========================================
# Feature Flags
# ===========================================
FEATURE_ML_FRAUD_DETECTION=true
FEATURE_INSTANT_TRANSFERS=false
FEATURE_LOAN_ORIGINATION=true

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
