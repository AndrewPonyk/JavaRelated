# =============================================================================
# Voting System — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# =============================================================================

# --- Server ---
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# --- PostgreSQL ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voting_system

# --- Ethereum / Blockchain ---
ETHEREUM_RPC_URL=http://127.0.0.1:8545
CHAIN_ID=1337
# DEPLOYER_PRIVATE_KEY=  # Only needed for testnet/mainnet deployment (Hardhat config) — NEVER commit

# --- Contract Addresses (populated after deployment) ---
# VOTING_SYSTEM_ADDRESS=0x...
# PROPOSAL_MANAGER_ADDRESS=0x...
# DELEGATION_REGISTRY_ADDRESS=0x...

# --- IPFS ---
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080
# IPFS_API_KEY=         # For Pinata or Infura IPFS
# IPFS_API_SECRET=

# --- MythX (Security Audit) ---
# MYTHX_API_KEY=        # Get from https://mythx.io

# --- Infura (for testnet/mainnet RPC) ---
# INFURA_PROJECT_ID=
# INFURA_API_SECRET=

# --- React App (prefixed with REACT_APP_ for CRA) ---
REACT_APP_API_URL=http://localhost:3001/api
# REACT_APP_VOTING_SYSTEM_ADDRESS=0x...
# REACT_APP_PROPOSAL_MANAGER_ADDRESS=0x...
# REACT_APP_DELEGATION_REGISTRY_ADDRESS=0x...

# --- Logging ---
LOG_LEVEL=debug
