# ===========================================
# E-Commerce Platform Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control

# Environment
ENVIRONMENT=development
DEBUG=true

# Django Settings
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Database (PostgreSQL)
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
# Docker uses service name, local uses localhost
# DATABASE_URL=postgres://postgres:postgres@db:5432/ecommerce

# Redis (Cache & Celery Broker)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# AWS (S3, etc.) - Leave empty for local file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=ecommerce-dev
AWS_S3_REGION_NAME=us-east-1
AWS_CLOUDFRONT_DOMAIN=

# Stripe (Payments)
# Get test keys from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email (SendGrid or SMTP)
# For development, emails are printed to console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com

# Sentry (Error Tracking) - Optional for development
SENTRY_DSN=

# CORS - Comma-separated origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
JWT_SECRET_KEY=your-jwt-secret-key

# Frontend
VITE_API_URL=http://localhost:8000/api/v1
FRONTEND_URL=http://localhost:3000

# Development Admin Credentials (auto-created on first run)
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123
