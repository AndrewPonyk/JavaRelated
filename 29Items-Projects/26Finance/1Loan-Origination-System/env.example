# Database Configuration
DB_HOST=localhost
DB_PORT=1521
DB_NAME=LOANDB
# NOTE: Use a dedicated application user instead of SYSTEM in all environments
DB_USERNAME=loan_user
DB_PASSWORD=changeme

# Kafka Configuration
# Containers use kafka:9092 (internal listener).
# Use localhost:29092 for host-based tools (kafka-console-consumer, etc.)
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_TOPIC_APPLICATION_EVENTS=loan.application.events
KAFKA_CONSUMER_GROUP=loan-origination-group

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_TIMEOUT_MS=5000

# Security Configuration
# JWT_SECRET is NOT used directly by the backend — the application validates JWTs via the
# Keycloak issuer URI (JWT_ISSUER_URI below). This value is kept here for documentation
# purposes only; manage secrets inside Keycloak, not here.
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_EXPIRATION_MS=900000
JWT_ISSUER_URI=http://localhost:8080/realms/loan-origination

# Feature Flags
FEATURE_ML_SCORING_ENABLED=true
FEATURE_AUTO_UNDERWRITING_ENABLED=true

# Spring Profile (dev skips Keycloak auth; prod requires JWT)
SPRING_PROFILES_ACTIVE=dev

# Monitoring
PROMETHEUS_ENABLED=true
LOGGING_LEVEL=INFO

# Frontend Configuration (must be a build-time arg for Vite — see frontend/Dockerfile)
VITE_API_BASE_URL=http://localhost:8080

